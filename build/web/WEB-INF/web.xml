<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateCourseServlet</servlet-name>
        <servlet-class>servlet.CreateCourseServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditCouseServlet</servlet-name>
        <servlet-class>servlet.EditCouseServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateAssignmentServlet</servlet-name>
        <servlet-class>servlet.CreateAssignmentServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteCourseServlet</servlet-name>
        <servlet-class>servlet.DeleteCourseServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditAssignmentServlet</servlet-name>
        <servlet-class>servlet.EditAssignmentServlet</servlet-class>
    </servlet>
  
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateCourseServlet</servlet-name>
        <url-pattern>/CreateCourseServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditCouseServlet</servlet-name>
        <url-pattern>/EditCouseServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateAssignmentServlet</servlet-name>
        <url-pattern>/CreateAssignmentServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteCourseServlet</servlet-name>
        <url-pattern>/DeleteCourseServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditAssignmentServlet</servlet-name>
        <url-pattern>/EditAssignmentServlet</url-pattern>
    </servlet-mapping>
   
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
